@model SigortaMusTakipProjesi.Models.Entity.MusteriGorusme

@{
    ViewBag.Title = "FindMusteriGorusme";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Edit", "MusteriGorusme", FormMethod.Post))
{

<div class="form-group">
    <label>Gorusme Id</label>
    @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })

    <br />
    <label>Musteri Id</label>
    @Html.TextBoxFor(m => m.MusId, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.MusId, "", new { @style = "color:red" })

    <br />
    <label>Gorusme Konusu</label>
    @Html.TextBoxFor(m => m.GorusmeKonusu, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.GorusmeKonusu, "", new { @style = "color:red" })



    <label>Gorusme Tarihi</label>
    @Html.EditorFor(m => m.GorusmeTarihi,
     new
          {
              htmlAttributes = new

     {
         @readonly = "true",
         Value = Model.GorusmeTarihi,
         @class = "form-control datepicker"
     }
     })

    @Html.ValidationMessageFor(m => m.GorusmeTarihi, "", new { @style = "color:red" })

    @if (Model.IsActive == false)
    {
        <br />
        <label>Urun Aktif</label>


        <div class="form-control">
            Evet
            @Html.RadioButtonFor(m => m.IsActive, true)
            Hayır
            @Html.RadioButtonFor(m => m.IsActive, false)
        </div>

    }

</div>

    <div>

        <button id="musgorusmeguncelle" class="btn btn-warning" onclick="javascript: return guncelle();">Guncelle</button>
    </div>

}
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


<script type="text/javascript">

    $(document).ready(function () {

        $(".datepicker").datepicker({


            changeMonth: true,
            changeYear: true,
            dateFormat: "yy-mm-dd"

        });
    });

    function guncelle() {

        var ok = confirm("Guncellemek istiyormusunuz?");
        if (ok == true) {
            return true;
        }
        return false;
    }

</script>



