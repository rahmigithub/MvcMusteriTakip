@model SigortaMusTakipProjesi.Models.Entity.Musteri
@{
    ViewBag.Title = "FindMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



@using (Html.BeginForm("Edit", "Musteri", FormMethod.Post))
{

    <div class="form-group">
        <label>Musteri Id</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })

        <br />
        <label>Musteri Adı</label>
        @Html.TextBoxFor(m => m.MusAdı, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusAdı, "", new { @style = "color:red" })

        <label>Musteri SoyAdı</label>
        @Html.TextBoxFor(m => m.MusSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusSoyad, "", new { @style = "color:red" })

        <label>Musteri İşyeri</label>
        @Html.TextBoxFor(m => m.Isyeri, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Isyeri, "", new { @style = "color:red" })

        <label>Musteri Adres</label>
        @Html.TextBoxFor(m => m.Adres, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Adres, "", new { @style = "color:red" })

        <label>Musteri Telefon</label>
        @Html.TextBoxFor(m => m.Tel, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Tel, "", new { @style = "color:red" })

        <label>Kayıt Tarihi</label>
        @Html.EditorFor(m => m.KayıtTarihi,
         new
              {
                  htmlAttributes = new

         {
             @readonly = "true",
             Value = Model.KayıtTarihi,
             @class = "form-control datepicker"
         }
         })

        @Html.ValidationMessageFor(m => m.KayıtTarihi, "", new { @style = "color:red" })

        @if (Model.IsActive == false)
        {
            <br />
            <label>Urun Aktif</label>


            <div class="form-control">
                Evet
                @Html.RadioButtonFor(m => m.IsActive, true)
                Hayır
                @Html.RadioButtonFor(m => m.IsActive, false)
            </div>

        }

    </div>

    <div>

        <button id="musguncelle" class="btn btn-warning" onclick="javascript: return guncelle();">Guncelle</button>
    </div>

}
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


<script type="text/javascript">

    $(document).ready(function () {

        $(".datepicker").datepicker({


            changeMonth :true,
            changeYear: true,
            dateFormat :"yy-mm-dd"
            
        });
    });

    function guncelle() {

        var ok = confirm("Guncellemek istiyormusunuz?");
        if (ok == true) {
            return true;
        }
        return false;
    }

</script>

